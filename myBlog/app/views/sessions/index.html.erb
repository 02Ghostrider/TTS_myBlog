<p id="notice"><%= notice %></p>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <h1>Welcome to MyBlog</h1>
    </div>
  </div>
</nav>
<div class="container">
	<div class="row">
		<div class="col">
			<h3>Login to an existing account</h3>
			<form action="/login" method="post">
				<div class="panel panel-primary">
		  	  <div class="panel-heading"><b>Login</b></div>
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" />
					<div class="panel-body">
					<div class="form-group">
						<label>User name:</label><br>
						<input type="text" id="username" name="username" class="form_control" />
					</div>
					<div class="form-group">
						<label>Password:</label><br>
						<input type="password" id="password" name="password" class="form_control" />
					</div>
					<input type="submit" value="Login" class="btn btn-success" />
					</div>
				</div>
			</form>
		</div>
		<div class="col">
			<h3>Register a new account</h3>
			<form action="/register" method="post">
				<div class="panel panel-primary">
    			<div class="panel-heading"><b>Sign up</b></div>
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" />
					<div class="panel-body">
						<div class="form-group">
							<label>First Name:</label><br>
							<input type="text" name="user[first_name]" class="form_control" />
						</div>
						<div class="form-group">
							<label>Last Name:</label><br>
							<input type="text" name="user[last_name]" class="form_control" />
						</div>
						<div class="form-group">
							<label>Email:</label><br>
							<input type="text" name="user[email]" class="form_control" />
						</div>
						<div class="form-group">
							<label>User Name:</label><br>
							<input type="text" name="user[username]" class="form_control" />
						</div>
						<div class="form-group">
							<label>Password:</label><br>
							<input type="password" name="user[password]" placeholder="(8 characters minimum)" class="form_control" />
						</div>
						<div class="form-group">
							<label>Confirm Password:</label><br>
							<input type="password" name="user[password_confirmation]" class="form_control" />
						</div>
						<input type="submit" value="Register" class="btn btn-success" />
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
