<p id="notice"><%= notice %></p>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="pull-right">

      </div>
      <h1>Posts</h1>
    </div>
  </div>
</nav>
<div class="panel-body">
  <% @posts.each do |post| %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">Post ID: <%= post.id %>  <%= post.title %></h2>
        <h6>By: <%= post.author %></h6>
      </div>
      <div class="panel-body">
        <%= post.blog_entry %>
      </div>
      <div class="panel-footer">
        <button type="button" class="btn btn-success"><%= link_to 'Show', post %></button>
        <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_post_path(post) %></button>
        <button type="button" class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div>
    </div>
  <% end %>
</div>
<button type="button" class="btn btn-primary"><%= link_to 'New Post', new_post_path %></button>
<br>
